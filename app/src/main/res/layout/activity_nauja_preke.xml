<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">
    <Spinner
        android:id="@+id/TipasSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/kiekis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kiek"/>
    <Spinner
        android:id="@+id/ind_uzsakymai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/kaina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kaina"/>

    <Spinner
        android:id="@+id/medaus_rusis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/turis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/turis"/>

    <Spinner
        android:id="@+id/ipakavimo_rusis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/pateikti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pateikti"
        />
</LinearLayout>